---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import project1 from "../assets/project1.png";
import project2 from "../assets/project2.png";
import project3 from "../assets/project3.png";
---

<div class="py-32 px-4 md:px-10 bg-background-dark relative" id="work">
  <div
    class="absolute top-20 left-0 w-full overflow-hidden pointer-events-none opacity-5"
  >
    <h2
      class="text-[15rem] font-bold text-white whitespace-nowrap leading-none translate-x-[-10%]"
    >
      SELECTED WORK
    </h2>
  </div>
  <div class="layout-content-container max-w-[1300px] mx-auto relative z-10">
    <div class="mb-24 text-center opacity-0" data-animate="fade-in-up">
      <span
       class="font-mono text-primary text-sm tracking-[0.2em] uppercase mb-4"
        >// PORTFOLIO</span
      >
      <h2 class="text-white text-4xl md:text-5xl font-bold">
        Featured Projects
      </h2>
    </div>
    <div class="flex flex-col gap-32">
      <div
        class="group flex flex-col md:flex-row items-center gap-12 lg:gap-20"
      >
        <div class="w-full md:w-3/5 relative opacity-0" data-animate="slide-in-left">
          <div
            class="relative rounded-3xl overflow-hidden aspect-video border border-white/10 group-hover:shadow-[0_0_30px_rgba(29,201,57,0.15)] transition-all duration-500"
          >
            <Image
              src={project1}
              alt="Financial Analytics Project"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
            <div
              class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"
            >
            </div>
          </div>
          <div
            class="absolute -bottom-4 -right-4 w-full h-full border border-white/5 rounded-3xl -z-10 group-hover:translate-x-2 group-hover:translate-y-2 transition-transform"
          >
          </div>
        </div>
        <div class="w-full md:w-2/5 opacity-0" data-animate="slide-in-right">
          <div class="flex items-center gap-4 mb-4">
            <span class="h-px w-12 bg-primary"></span>
            <p class="text-primary font-mono text-sm">Fintech</p>
          </div>
          <h3
            class="text-white text-3xl font-bold mb-4 group-hover:text-primary transition-colors"
          >
            Financial Analytics
          </h3>
          <p class="text-gray-400 text-lg leading-relaxed mb-8">
            Real-time dashboard for visualizing financial data and analyzing
            market trends with sub-second latency.
          </p>
          <div class="flex flex-wrap gap-3 mb-8">
            <span
              class="text-xs font-bold text-white bg-white/5 px-3 py-1.5 rounded-full border border-white/10"
              >React</span
            >
            <span
              class="text-xs font-bold text-white bg-white/5 px-3 py-1.5 rounded-full border border-white/10"
              >D3.js</span
            >
          </div>
          <a
            class="inline-flex items-center gap-2 text-white font-bold border-b border-primary/50 pb-1 hover:border-primary hover:text-primary transition-colors"
            href="#"
          >
            View Case Study
            <Icon name="material-symbols:arrow-forward" class="text-2xl"/>
          </a>
        </div>
      </div>
      <div
        class="group flex flex-col md:flex-row-reverse items-center gap-12 lg:gap-20"
      >
        <div class="w-full md:w-3/5 relative opacity-0" data-animate="slide-in-right">
          <div
            class="relative rounded-3xl overflow-hidden aspect-video border border-white/10 group-hover:shadow-[0_0_30px_rgba(29,201,57,0.15)] transition-all duration-500"
          >
            <Image
              src={project2}
              alt="EcoTravel App Project"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
            <div
              class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"
            >
            </div>
          </div>
          <div
            class="absolute -bottom-4 -left-4 w-full h-full border border-white/5 rounded-3xl -z-10 group-hover:-translate-x-2 group-hover:translate-y-2 transition-transform"
          >
          </div>
        </div>
        <div class="w-full md:w-2/5 md:text-right opacity-0" data-animate="slide-in-left">
          <div class="flex items-center gap-4 mb-4 md:justify-end">
            <p class="text-primary font-mono text-sm">Mobile Application</p>
            <span class="h-px w-12 bg-primary"></span>
          </div>
          <h3
            class="text-white text-3xl font-bold mb-4 group-hover:text-primary transition-colors"
          >
            EcoTravel App
          </h3>
          <p class="text-gray-400 text-lg leading-relaxed mb-8">
            Helping travelers find eco-friendly accommodations and track their
            carbon footprint seamlessly.
          </p>
          <div class="flex flex-wrap gap-3 mb-8 md:justify-end">
            <span
              class="text-xs font-bold text-white bg-white/5 px-3 py-1.5 rounded-full border border-white/10"
              >React Native</span
            >
            <span
              class="text-xs font-bold text-white bg-white/5 px-3 py-1.5 rounded-full border border-white/10"
              >Firebase</span
            >
          </div>
          <a
            class="inline-flex items-center gap-2 text-white font-bold border-b border-primary/50 pb-1 hover:border-primary hover:text-primary transition-colors"
            href="#"
          >
            View Case Study
            <Icon name="material-symbols:arrow-forward" class="text-2xl"/>
          </a>
        </div>
      </div>
      <div
        class="group flex flex-col md:flex-row items-center gap-12 lg:gap-20"
      >
        <div class="w-full md:w-3/5 relative opacity-0" data-animate="slide-in-left">
          <div
            class="relative rounded-3xl overflow-hidden aspect-video border border-white/10 group-hover:shadow-[0_0_30px_rgba(29,201,57,0.15)] transition-all duration-500"
          >
            <Image
              src={project3}
              alt="SaaS Platform Web Project"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
            <div
              class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"
            >
            </div>
          </div>
          <div
            class="absolute -bottom-4 -right-4 w-full h-full border border-white/5 rounded-3xl -z-10 group-hover:translate-x-2 group-hover:translate-y-2 transition-transform"
          >
          </div>
        </div>
        <div class="w-full md:w-2/5 opacity-0" data-animate="slide-in-right">
          <div class="flex items-center gap-4 mb-4">
            <span class="h-px w-12 bg-primary"></span>
            <p class="text-primary font-mono text-sm">Marketing</p>
          </div>
          <h3
            class="text-white text-3xl font-bold mb-4 group-hover:text-primary transition-colors"
          >
            SaaS Platform Web
          </h3>
          <p class="text-gray-400 text-lg leading-relaxed mb-8">
            High-conversion marketing website with integrated blog and deep
            analytics integration.
          </p>
          <div class="flex flex-wrap gap-3 mb-8">
            <span
              class="text-xs font-bold text-white bg-white/5 px-3 py-1.5 rounded-full border border-white/10"
              >Next.js</span
            >
            <span
              class="text-xs font-bold text-white bg-white/5 px-3 py-1.5 rounded-full border border-white/10"
              >Tailwind</span
            >
          </div>
          <a
            class="inline-flex items-center gap-2 text-white font-bold border-b border-primary/50 pb-1 hover:border-primary hover:text-primary transition-colors"
            href="#"
          >
            View Case Study
            <Icon name="material-symbols:arrow-forward" class="text-2xl"/>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
